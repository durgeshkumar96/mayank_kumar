#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
   long int n,m,a,b,k,sum=0,c;
    int i;
    //printf("Enter the no.of JARS,and no. of operations\n");
    scanf("%ld%ld",&n,&m);
    for(i=0;i<m;i++)
    {
      //  printf("enter the no. of indices to be filled in btw\n");
        scanf("%ld%ld%ld",&a,&b,&k);
        c=b-a+1;
        c=c*k;
        sum=sum+c;
        
    }
    sum=sum/n;
    printf("%ld",sum);
   
    return 0;
}
