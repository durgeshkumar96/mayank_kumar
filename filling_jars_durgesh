#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int i,n,m,a,b,k,sum=0,c;
    //printf("Enter the no.of JARS,and no. of operations\n");
    scanf("%d%d",&n,&m);
    for(i=0;i<m;i++)
    {
      //  printf("enter the no. of indices to be filled in btw\n");
        scanf("%d%d%d",&a,&b,&k);
        c=b-a+1;
        c=c*k;
        sum=sum+c;
        
    }
    sum=sum/n;
    printf("%d",sum);
   
    return 0;
}
